{
    "cSpell.diagnosticLevel": "Hint",
    "editor.snippetSuggestions": "top",
    "editor.suggest.snippetsPreventQuickSuggestions": true,
    "python.analysis.diagnosticSeverityOverrides": {
        "reportOptionalMemberAccess": "none",
        "reportOptionalSubscript": "none",
    },
    "workbench.colorTheme": "Material Theme High Contrast",
    "python.analysis.typeCheckingMode": "basic",
    "files.insertFinalNewline": true,
    "python.languageServer": "Pylance",
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.py$",
                "isAsync": true,
                // Use the full path from above in case it can't find it
                "cmd": "isort \"${file}\""
            },
            {
                "match": "\\.py$",
                "isAsync": true,
                // Use the full path from above in case it can't find it
                "cmd": "ruff check --fix \"${file}\""
            },
            {
                "match": "\\.py$",
                "isAsync": true,
                // Use the full path from above in case it can't find it
                "cmd": "black \"${file}\""
            },
        ]
    },
    "terminal.explorerKind": "external",
    "terminal.external.osxExec": "",
    "editor.tokenColorCustomizations": {
        "[Material Theme High Contrast]": {
            "textMateRules": [
                {
                    "name": "",
                    "scope": "keyword.control.import.python",
                    "settings": {
                        "foreground": "#68bbf3",
                        "fontStyle": "italic"
                    }
                },
                {
                    "name": "",
                    "scope": "keyword.control",
                    "settings": {
                        "foreground": "#f36868",
                        "fontStyle": "italic"
                    }
                },
                {
                    "name": "Import Name",
                    "scope": "entity.other.inherited-class.python",
                    "settings": {
                        "foreground": "#f7ff5c"
                    }
                },
                {
                    "name": "Import Name",
                    "scope": "entity.name.namespace",
                    "settings": {
                        "foreground": "#f7ff5c"
                    }
                },
                {
                    "name": "Class Name",
                    "scope": "entity.name.type.class",
                    "settings": {
                        "fontStyle": "underline",
                        "foreground": "#7ab583"
                    }
                },
                {
                    "name": "Decorator definition decorator",
                    "scope": "punctuation.definition.decorator.python",
                    "settings": {
                        "foreground": "#F92672",
                        "underline": true,
                    }
                },
                {
                    "name": "Meta function-call",
                    "scope": "meta.function-call.generic.python",
                    "settings": {
                        "foreground": "#66D9EF"
                    }
                },
                {
                    "name": "Storage type function async",
                    "scope": "storage.type.function.async.python",
                    "settings": {
                        "foreground": "#F92672",
                    }
                },
                {
                    "name": "Punctuation separator period",
                    "scope": "punctuation.separator.period.python",
                    "settings": {
                        "foreground": "#F8F8F2",
                    }
                },
                {
                    "name": "Entity name function decorator",
                    "scope": "entity.name.function.decorator.python",
                    "settings": {
                        "foreground": "#66D9EF",
                    }
                },
                {
                    "name": "Entity name type class",
                    "scope": "entity.name.type.class.python",
                    "settings": {
                        "fontStyle": ""
                    }
                },
                {
                    "name": "Entity other inherited-class",
                    "scope": "entity.other.inherited-class.python",
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
                {
                    "name": "Support type python",
                    "scope": "support.type.python",
                    "settings": {
                        "fontStyle": ""
                    }
                },
                {
                    "name": "String quoted docstring multi python",
                    "scope": "string.quoted.docstring.multi.python",
                    "settings": {
                        "foreground": "#88846F",
                    }
                }
            ]
        }
    },
    "cSpell.blockCheckingWhenAverageChunkSizeGreaterThan": 800,
    "python.condaPath": "./venv/bin/python",
    "[python]": {
        "editor.formatOnType": true
    },
    "workbench.startupEditor": "none",
    "git.openRepositoryInParentFolders": "always",
    "http.proxyStrictSSL": false,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.linux": "/Users/julianbaumgartner/.config/nvim/init.vim", 
    "vscode-neovim.compositeKeys": {
        "jk": {
            "command": "vscode-neovim.escape",
        },
    },
    "editor.lineNumbers": "relative",
    "gopls": { "ui.semanticTokens": true }
}


